<h1>Hosts</h1>

<table class="mytable">
  <tr>
    <td>Host</td>
    <td>IP</td>
    <td>Última modificación</td>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%=h host.nombre %></td>
    <td><%=h host.ip %></td>
    <td><%=h host.updated_at.strftime("%Y/%m/%d - %H:%M:%S %p") %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Actualizar listado', :action => "show" %>