<h1>Listing hosts</h1>

<table>
  <tr>
    <th>Ip</th>
    <th>Nombre</th>
    <th>Last updated</th>
  </tr>

<% @hosts.each do |host| %>
  <tr>
    <td><%=h host.ip %></td>
    <td><%=h host.nombre %></td>
    <td><%=h host.updated_at.strftime("%Y/%m/%d - %H:%M:%S %p") %></td>
    <td><%= button_to 'Show', host %></td>
    <td><%= button_to 'Edit', edit_host_path(host) %></td>
    <td><%= button_to 'Destroy', host, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New host', new_host_path %>